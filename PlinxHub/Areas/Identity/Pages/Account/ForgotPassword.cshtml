@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}
@{ Layout = "~/Views/Shared/_Layout.cshtml";

    <div class="parallax-container">
        <div class="Services-Header shadow">
            <h2 style="color:white">@ViewData["Title"]</h2>
            <h3 style="color:white">Enter your email</h3>
        </div>
        <div class="parallax"><img src="~/Content/Images/login/stairs.jpg"></div>
    </div>
    <div class="container">
        <div class="row">
            <p>Please enter your password below so we can reset your password.</p>
            <div class="col s12 m4">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
            <div class="col s12 m8"></div>

            </div>
        </div>
    <div class="parallax-container">
        <div class="parallax"><img src="~/Content/Images/login/stairs.jpg"></div>
    </div>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
