@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Reset password confirmation";
}

<h1>@ViewData["Title"]</h1>
@{ Layout = "~/Views/Shared/_Layout.cshtml";
    <div class="parallax-container">
        <div class="Services-Header shadow">
            <h2 style="color:white">@ViewData["Title"]</h2>
            <h3 style="color:white">Bye then!</h3>
        </div>
        <div class="parallax"><img src="~/Content/Images/login/stairs.jpg"></div>
    </div>
    <div class="container">
        <div class="row">
            <br />
            <br />
            <br />
            <p>
                Your password has been reset. Please <a asp-page="./Login">click here to log in</a>.
            </p>
            <br />
            <br />
            <br />
        </div>
    </div>
    <div class="parallax-container">
        <div class="parallax"><img src="~/Content/Images/login/stairs.jpg"></div>
    </div>
}
