@model PlinxHub.API.Dtos.OrderWithFilters;
@using PlinxHub.Common.Extensions;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="parallax-container">
    <div class="About-Header shadow">
        <h2 style="color:white">Your order</h2>
        <h3 style="color:white">This is where the magic happens</h3>
    </div>
    <div class="parallax"><img src="~/Content/Images/computer.jpg"></div>
</div>



<div class="container">

    @using (Html.BeginForm("Index", "Administration", FormMethod.Get))
    {
        <partial name="_orderFilters" />
    }

    <table class="table">
        <thead>
            <tr>
                <th>
                    User ID
                </th>
                <th>
                    Company Name
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Surname
                </th>
                <th>
                    Address Line 1
                </th>
                <th>
                    Postcode
                </th>
                <th>
                    Email
                </th>
                <th>
                    Template
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Order)
            {
                <tr>
                    <td>
                        @item.OrderNumber.GetSubString()
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanyName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AddresssLine1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Postcode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmailAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TemplateNumber)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="parallax-container">
    <div class="parallax"><img src="~/Content/Images/computer.jpg"></div>
</div>